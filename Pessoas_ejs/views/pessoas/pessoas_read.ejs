<%- include('../header') %>

  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12"></div>

      <% if (message) { %>
        <div
          class="alert alert-dismissible fade show alert-<%= message.type %>"
          role="alert"
        >
          <button
            class="btn-close"
            type="button"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
          <strong> <%= message.message %> </strong>
        </div>
    
        <% } %>
      
      <form class="d-flex" action="/pessoas.search" method="POST">
        <input class="form-control me-2" type="text" name="search" placeholder="Pesquisa..." value="<%= search %>">
        <button class="btn btn-dark" type="submit" name="submit"> <i class="fas fa-search me-1"></i> </button>
      </form>

      <div class="table-responsive">
        <table id="pessoassList" class="table table-striped  text-center my-3">
          <thread>
            <tr class="table-dark">
              <th class="table-light"><a class="nav-link" href="/pessoas/create"> <i class="fas fa-plus me-1"></i> </a>
              </th>
              <th>ID</th>
              <th>Nome</th>
              <th>Sal√°rio</th>
              <th> </th>
            </tr>
            <tbody>
              <% if ( pessoass !='' ) { pessoass.forEach((row, index)=> { %>
                <tr class="align-middle">
                  <td>

                  </td>
                  <td>
                    <%= row.id %>
                  </td>
                  <td>
                    <%= row.nome %>
                  </td>
                  <td> R$
                    <%= row.salario.toFixed(2) %>
                  </td>
                  <td>
                    <a href="pessoas/update/<%= row.id %>" class="text-dark">
                      <i class="fas fa-edit fa-lg mx-1"></i></a>
                    <a href="pessoas/delete/<%= row.id %>" class="text-dark">
                      <i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                  </td>
                </tr>
                <% }) } %>
            </tbody>
          </thread>
        </table>
        <% if ( pessoass=='' ) { %>
          <h1 class="text-center text-secondary mt-5">
            Nenhuma vaga de emprego encontrada! :(
          </h1>
          <% } %>
      </div>
    </div>
  </div>

<%- include('../footer') %>